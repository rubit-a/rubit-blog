---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
	title: string;
	description: string;
	lang?: string;
}

const { title, description, lang = 'ko' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			body {
				margin: 0;
				padding: 0;
			}
			.layout-container {
				display: flex;
				min-height: 100vh;
			}
			.main-wrapper {
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			.mobile-header {
				display: none;
			}
			main {
				flex: 1;
				max-width: 1200px;
				width: 100%;
				padding: 2rem;
				margin: 0 auto;
			}

			@media (max-width: 960px) {
				.mobile-header {
					display: block;
				}
				.layout-container {
					flex-direction: column;
				}
				main {
					padding: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="layout-container">
			<Sidebar />
			<div class="main-wrapper">
				<div class="mobile-header">
					<Header />
				</div>
				<main>
					<slot />
				</main>
				<Footer />
			</div>
		</div>
	</body>
</html>
