---
interface Props {
	tags?: string[];
}

const { tags = [] } = Astro.props;
---

{
	tags.length > 0 && (
		<div class="tags">
			{tags.map((tag) => (
				<a href={`/blog/tag/${tag}`} class="tag">
					#{tag}
				</a>
			))}
		</div>
	)
}

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin: 1rem 0;
	}
	.tag {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		background-color: rgb(var(--accent));
		color: white;
		border-radius: 0.375rem;
		font-size: 0.875rem;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}
	.tag:hover {
		opacity: 0.8;
	}
</style>
